---
import type { HTMLAttributes } from "astro/types";

export type Props = HTMLAttributes<"p">;

const content = await Astro.slots.render("default");
---

{
	content ? (
		<p
			class="text-xs font-medium text-tomato-11"
			data-error-message
			{...Astro.props}
		>
			{content}
		</p>
	) : (
		<p
			class="text-xs font-medium text-tomato-11"
			data-error-message
			{...Astro.props}
		/>
	)
}
